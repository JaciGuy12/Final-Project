@page
@model IndexModel
@{
    ViewData["Title"] = "Home";
}

<div class="text-center mb-5">

    <img src="~/img/jccwebsiteimage.png"
         alt="Crochet Showcase"
         class="img-fluid rounded shadow-lg mb-4"
         style="max-height: 450px; object-fit: cover; width: 100%; border-radius: 20px;" />

    <h1 class="text-pink fw-bold mt-4">Welcome to Jaci’s Crochet Creations!</h1>

    <p class="lead mt-3" style="color:#8a1f54;">
        Discover a world of handmade crochet treasures — each piece crafted with care,
        creativity, and a whole lot of love. From cozy scarves and stylish bags to adorable
        plushies, sweaters, and blankets, you'll find something truly unique and special.
        Whether you're shopping for yourself or searching for the perfect heartfelt gift,
        Jaci’s Crochet Creations has something beautiful waiting for you.
    </p>

    <a asp-page="/Products/Index" class="btn btn-pink btn-lg mt-4 px-5 py-2 fw-bold">
        Shop Now
    </a>

</div>


<hr style="border-color:#f7c1dd;" />

