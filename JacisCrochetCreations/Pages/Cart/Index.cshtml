@page
@model JacisCrochetCreations.Pages.Cart.IndexModel
@{
    ViewData["Title"] = "Your Cart";
}

<h1 class="text-pink fw-bold mb-4">Your Shopping Cart</h1>

@if (!Model.CartItems.Any())
{
    <p>Your cart is empty.</p>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Product</th>
                <th>Price</th>
                <th>Qty</th>
                <th>Total</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.CartItems)
            {
                <tr>
                    <td>@item.Product.Name</td>
                    <td>$@item.UnitPrice</td>
                    <td>@item.Quantity</td>
                    <td>$@(item.UnitPrice * item.Quantity)</td>
                </tr>
            }
        </tbody>
    </table>

    <h3 class="text-pink">Cart Total: $@Model.Total</h3>

    <a class="btn btn-pink" asp-page="/Cart/Checkout/Index">Proceed to Checkout</a>
}
