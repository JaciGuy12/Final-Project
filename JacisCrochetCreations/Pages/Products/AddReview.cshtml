@page "{productId:int}"
@model JacisCrochetCreations.Pages.Products.AddReviewModel
@{
    ViewData["Title"] = "Leave a Review";
}

<h2 class="text-pink fw-bold mb-4">Leave a Review</h2>

<form method="post">

    <input type="hidden" asp-for="Review.ProductId" />

    <div class="mb-3">
        <label asp-for="Review.Name" class="form-label"></label>
        <input asp-for="Review.Name" class="form-control" />
        <span asp-validation-for="Review.Name" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Review.Rating" class="form-label"></label>
        <select asp-for="Review.Rating" class="form-select">
            <option value="1">1 ★</option>
            <option value="2">2 ★★</option>
            <option value="3">3 ★★★</option>
            <option value="4">4 ★★★★</option>
            <option value="5">5 ★★★★★</option>
        </select>
        <span asp-validation-for="Review.Rating" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Review.Content" class="form-label"></label>
        <textarea asp-for="Review.Content" class="form-control" rows="4"></textarea>
        <span asp-validation-for="Review.Content" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-pink">Submit Review</button>

    <a asp-page="/Products/Details" asp-route-id="@Model.ProductId" class="btn btn-secondary">Cancel</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

