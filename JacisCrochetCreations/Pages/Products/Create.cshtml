@page
@model JacisCrochetCreations.Pages.Products.CreateModel
@{
    ViewData["Title"] = "Create Product";
}

<h1 class="text-pink fw-bold mb-4">Add New Product</h1>

<div class="card shadow-sm p-4">
    <form method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

        <div class="row">
            <div class="col-md-6">

                <div class="mb-3">
                    <label asp-for="Product.Name" class="form-label fw-semibold"></label>
                    <input asp-for="Product.Name" class="form-control" />
                    <span asp-validation-for="Product.Name" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Product.Category" class="form-label fw-semibold"></label>
                    <select asp-for="Product.Category" class="form-control">
                        <option>Scarf</option>
                        <option>Bag</option>
                        <option>Plushie</option>
                        <option>Sweater</option>
                        <option>Blanket</option>
                    </select>
                    <span asp-validation-for="Product.Category" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Product.Price" class="form-label fw-semibold"></label>
                    <input asp-for="Product.Price" class="form-control" />
                    <span asp-validation-for="Product.Price" class="text-danger"></span>
                </div>

            </div>

            <div class="col-md-6">

                <div class="mb-3">
                    <label asp-for="Product.Description" class="form-label fw-semibold"></label>
                    <textarea asp-for="Product.Description" class="form-control"></textarea>
                    <span asp-validation-for="Product.Description" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Product.Stock" class="form-label fw-semibold"></label>
                    <input asp-for="Product.Stock" class="form-control" />
                    <span asp-validation-for="Product.Stock" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Product.ImageUrl" class="form-label fw-semibold"></label>
                    <input asp-for="Product.ImageUrl" class="form-control" />
                    <span asp-validation-for="Product.ImageUrl" class="text-danger"></span>
                </div>

            </div>
        </div>

        <button type="submit" class="btn btn-pink mt-3">Create Product</button>
        <a asp-page="Index" class="btn btn-secondary mt-3">Cancel</a>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
