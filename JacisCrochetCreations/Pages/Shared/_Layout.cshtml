@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Jaci's Crochet Creations</title>

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" />

    <!-- CUSTOM PINK THEME -->
    <style>
        body {
            background-color: #fff5fa;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        .navbar {
            background-color: #ffe0ef !important;
            border-bottom: 1px solid #f7c1dd;
        }

        .navbar-brand {
            font-weight: bold;
            color: #d63384 !important;
            font-size: 1.5rem;
        }

        .nav-link {
            color: #b32e6f !important;
            font-weight: 500;
        }

        .nav-link:hover {
            color: #d63384 !important;
        }

        .text-pink {
            color: #d63384 !important;
        }

        /* PINK BUTTONS */
        .btn-pink-light {
            background-color: #f7c1dd !important;
            color: #8a1f54 !important;
            border: none;
        }

        .btn-pink-light:hover {
            background-color: #e8a7c8 !important;
            color: #6c1742 !important;
        }

        .btn-pink {
            background-color: #d63384 !important;
            color: white !important;
            border: none;
        }

        .btn-pink:hover {
            background-color: #b12b66 !important;
        }

        .btn-pink-dark {
            background-color: #9b1c58 !important;
            color: white !important;
            border: none;
        }

        .btn-pink-dark:hover {
            background-color: #7c1646 !important;
        }

        /* Footer */
        .footer {
            background-color: #ffe0ef;
            padding: 1rem 0;
            border-top: 1px solid #f7c1dd;
        }
    </style>
</head>

<body>

    <nav class="navbar navbar-expand-lg navbar-light shadow-sm">
        <div class="container">

            <a class="navbar-brand" asp-page="/Index">
                Jaci's Crochet Creations
            </a>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" 
                    data-bs-target="#navbarNav" aria-controls="navbarNav"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">

                    <li class="nav-item">
                        <a class="nav-link" asp-page="/Index">Home</a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" asp-page="/Products/Index">Products</a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" asp-page="/Cart/Index">Cart</a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" asp-page="/Cart/Checkout/Index">Checkout</a>
                    </li>

                </ul>
            </div>

        </div>
    </nav>

    <!-- MAIN BODY CONTENT -->
    <div class="container mt-4">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <!-- FOOTER -->
    <footer class="footer text-center text-muted mt-5">
        <div class="container">
            <p class="m-0">&copy; @DateTime.Now.Year Jaci's Crochet Creations — All handmade with love ♡</p>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>


